.Side_bar
  .Side_bar_top
    .Side_bar_top_name
      = current_user.name
    .Side_bar_top_icon
      .Side_bar_top_icon_new
      = link_to new_group_path do
        = fa_icon 'edit'
      .Side_bar_top_icon_edit
      = link_to edit_user_path(current_user) do
        = fa_icon 'cog' 

  .Side_bar_main
    .Side_bar_main_group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .Side_bar_main_group_box
            .Side_bar_main_group_name
              = group.name
            .Side_bar_main_group_text
              = group.show_last_message